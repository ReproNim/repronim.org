[codespell]
# Ref: https://github.com/codespell-project/codespell#using-a-config-file
skip = .git*,go.sum,i18n,*.css,.codespellrc,public
check-hidden = true
# lines with names in publications
# TODO remove codespell:ignore after issue fixed: https://github.com/codespell-project/codespell/issues/3617
ignore-regex = (^- (name|.*\bdoi):.*|fnndsc\.childrens\.harvard\.edu|.*codespell:ignore.*)
